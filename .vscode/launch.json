    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug web-cra in Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/packages/web-cra",
            "timeout": 20000,
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug web-next in Chrome",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/packages/web-cra",
            "timeout": 20000,
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug NextJS",
            "skipFiles": ["<node_internals>/**"],
            "port": 9229
          }
    ]
}

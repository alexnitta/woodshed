{
    "extends": "../../tsconfig-package-base",
    "compilerOptions": {
        // "composite": false,
        // "declaration": false,
        // "declarationMap": false,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "rootDir": "src",
        "target": "es5",
        "typeRoots": ["../../customTypes", "./node_modules/@types"]
        // Create React App adds these values automatically when it runs, but we don't want them
        // when running Webpack with our own configs. This file is set up to ensure that webpack has
        // the tsconfig options that we want.
        //   "allowJs": true,
        //   "noEmit": true
    },
    "include": ["src"],
    "references": [
        {
            "path": "../components"
        },
        {
            "path": "../utils"
        }
    ]
}
